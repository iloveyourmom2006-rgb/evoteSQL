DROP TABLE IF EXISTS area;
CREATE TABLE area (
    areaID VARCHAR(6) NOT NULL PRIMARY KEY,
    areaName VARCHAR(100) NOT NULL,
    areaLevel VARCHAR(5) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;


DROP TABLE IF EXISTS candidate;
CREATE TABLE candidate (
    candidateID TINYINT(3) NOT NULL PRIMARY KEY,
    candidateName VARCHAR(100) NOT NULL,
    candidateParty VARCHAR(100) NOT NULL,
    candidateDetail TEXT NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;


DROP TABLE IF EXISTS class;
CREATE TABLE class (
    classID VARCHAR(10) NOT NULL PRIMARY KEY DEFAULT '0',
    className VARCHAR(50) DEFAULT NULL,
    classAbbr VARCHAR(50) DEFAULT NULL,
    majorID VARCHAR(8) DEFAULT NULL,
    personnelID INT(5) DEFAULT NULL,
    personnelID2 INT(5) DEFAULT NULL,
    year INT(4) NOT NULL DEFAULT 0,
    areaName VARCHAR(200) DEFAULT '0',
    majorName VARCHAR(200) DEFAULT NULL,
    classEnable TINYINT(1) NOT NULL DEFAULT 0
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;


DROP TABLE IF EXISTS major;
CREATE TABLE major (
    majorID VARCHAR(8) NOT NULL PRIMARY KEY,
    majorName VARCHAR(100) NOT NULL,
    areaID VARCHAR(6) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;


DROP TABLE IF EXISTS student;
CREATE TABLE student (
    studentID VARCHAR(12) NOT NULL PRIMARY KEY,
    studentGender VARCHAR(4) NOT NULL,
    studentPrefix VARCHAR(8) NOT NULL,
    studentName VARCHAR(25) NOT NULL,
    studentSer VARCHAR(25) NOT NULL,
    studentNickname VARCHAR(20) DEFAULT NULL,
    studentNameEn VARCHAR(50) DEFAULT NULL,
    studentSerEn VARCHAR(50) DEFAULT NULL,
    personnelcardID VARCHAR(13) NOT NULL UNIQUE,
    nationalityID INT(3) DEFAULT NULL,
    studentEthnicity VARCHAR(50) DEFAULT NULL,
    studentReligion VARCHAR(20) DEFAULT NULL,
    studentBirthday DATE DEFAULT NULL,
    studentHeight INT(3) DEFAULT NULL,
    studentEeight TINYINT(3) DEFAULT NULL,
    studentBloodgroup VARCHAR(5) DEFAULT NULL,
    studentLevel VARCHAR(5) NOT NULL,
    studentStartyear INT(4) NOT NULL,
    areaID VARCHAR(6) DEFAULT NULL,
    majorID VARCHAR(8) DEFAULT NULL,
    studentAdd TEXT DEFAULT NULL,
    studentDistrict VARCHAR(50) DEFAULT NULL,
    studentPrefecture VARCHAR(50) DEFAULT NULL,
    studentProvince VARCHAR(50) DEFAULT NULL,
    studentZipcode VARCHAR(6) DEFAULT NULL,
    studentPhone VARCHAR(10) DEFAULT NULL,
    studentEmail VARCHAR(30) DEFAULT NULL,
    studentFatname VARCHAR(50) DEFAULT NULL,
    studentFatser VARCHAR(50) DEFAULT NULL,
    studentFatstatus VARCHAR(2) DEFAULT NULL,
    studentFatcareer VARCHAR(50) DEFAULT NULL,
    studentFatsalary INT(10) DEFAULT NULL,
    studentFatphone VARCHAR(13) DEFAULT NULL,
    studentMotname VARCHAR(50) DEFAULT NULL,
    studentMotser VARCHAR(50) DEFAULT NULL,
    studentMotstatus VARCHAR(2) DEFAULT NULL,
    studentMotcareer VARCHAR(50) DEFAULT NULL,
    studentMotsalary INT(10) DEFAULT NULL,
    studentMotphone VARCHAR(13) DEFAULT NULL,
    studentFmmarry VARCHAR(2) DEFAULT NULL,
    studentFmmaryother TEXT DEFAULT NULL,
    studentParname VARCHAR(50) DEFAULT NULL,
    studentParser VARCHAR(50) DEFAULT NULL,
    studentParcareer VARCHAR(50) DEFAULT NULL,
    studentParsalary INT(10) DEFAULT NULL,
    studentParphone VARCHAR(13) DEFAULT NULL,
    studentDrugscheck VARCHAR(1) DEFAULT NULL,
    studentSuperiority TEXT DEFAULT NULL,
    studentEndyear INT(4) NOT NULL,
    studentEndstatus VARCHAR(2) NOT NULL,
    studentPicture VARCHAR(100) DEFAULT NULL,
    studentPaymethod VARCHAR(20) DEFAULT NULL,
    studentBank VARCHAR(100) DEFAULT NULL,
    studentBankno VARCHAR(50) DEFAULT NULL,
    studentPaydate DATETIME DEFAULT NULL,
    classID VARCHAR(10) DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;


DROP TABLE IF EXISTS studentvote;
CREATE TABLE studentvote (
    studentID VARCHAR(12) NOT NULL PRIMARY KEY,
    studentvoteDate DATE NOT NULL,
    studentvoteStatus TINYINT(1) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;


DROP TABLE IF EXISTS user;
CREATE TABLE user (
    userID INT(10) NOT NULL PRIMARY KEY,
    userName VARCHAR(50) NOT NULL,
    userPass VARCHAR(50) NOT NULL,
    userStatus VARCHAR(15) NOT NULL,
    userFullname VARCHAR(200) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;


DROP TABLE IF EXISTS vote;
CREATE TABLE vote (
    voteID INT(10) NOT NULL PRIMARY KEY,
    voteDatetime DATETIME NOT NULL,
    candidateID TINYINT(3) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;
